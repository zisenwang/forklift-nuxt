generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Equipment {
  id         BigInt    @id @default(autoincrement())
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  type       String    @db.VarChar
  Model      Model[]
}

model Model {
  id               BigInt     @id @default(autoincrement())
  created_at       DateTime?  @default(now()) @db.Timestamptz(6)
  type_fk          BigInt?
  name             String     @db.VarChar
  description      String?    @db.VarChar
  capacity_kg      BigInt?
  lift_height_mm   BigInt?
  fork_size        String?    @db.VarChar
  battery_voltage  Int?
  battery_ampere   Int?
  battery_type     String?    @db.VarChar
  controller_type  String?    @db.VarChar
  travel_speed_kmh Float?     @db.Real
  rrp              Int
  Equipment        Equipment? @relation(fields: [type_fk], references: [id], onDelete: Cascade, onUpdate: NoAction)
  Note             Note[]
  Optional         Optional[]
}

model Note {
  id          BigInt    @id @default(autoincrement())
  created_at  DateTime? @default(now()) @db.Timestamptz(6)
  model_fk    BigInt?
  description String    @db.VarChar
  Model       Model?    @relation(fields: [model_fk], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model Optional {
  id          BigInt    @id @default(autoincrement())
  created_at  DateTime? @default(now()) @db.Timestamptz(6)
  model_fk    BigInt?
  description String?   @db.VarChar
  rrp         Int
  Model       Model?    @relation(fields: [model_fk], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
